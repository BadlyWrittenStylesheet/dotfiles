configuration {
  display-drun: "";
  drun-display-format: "- {name} -";
  font: "Hurmit Nerd Font 10";
  modi: "window,run,drun,power";
  show-icons: false;
  location: 3;
  yoffset: 24;
  xoffset: 2;
  orientation: vertical;
}

@theme "~/.config/rofi/theme.rasi"

window {
  width: 300;
  border-radius: 6;
  border-color: @fg;
  border: 2;
  padding: 12 0 0 0;
}

element {
  padding: 6 6 6 10;
  background-color: #0000;
  border-radius: 2;
  // orientation: vertical;
  text-color: @fg;
}

element selected {
  text-color: @bg;
  background-color: @fg;
  // border-color: @fg;
  // border: 2;
}

element-text {
  background-color: #00000000;
  text-color: inherit;
  // horizontal-align: 0.5;
}

entry {
  background-color: @fg;
  padding: 6 12;
  margin: 0;
  text-color: @bg;
}

inputbar {
  children: [entry];
}

listview {
  padding: 0 12;
  columns: 1;
  lines: 5;
  fixed-lines: true;
}

mainbox {
  // background-color: @bg;
  children: [listview, inputbar];
}

prompt {
  // background-color: @fg;
  enabled: false;
  padding: 12 0 0 12;
  text-color: @fg;
}

